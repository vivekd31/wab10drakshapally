extends layout

block content
  h1= title
  p Welcome to the bakery pug
  div(class="container-fluid")
        div(class="row")
            -
                let bakery = [
                    {
                        "Itemname": "sandwich",
                        "Quantity": 50,
                        "price": "Ten USD"
                    },
                    {
                        "Itemname": "donut",
                        "Quantity": 20,
                        "price": "Five USD"
                    },
                    {
                        "Itemname": "Coke",
                        "Quantity": 1,
                        "price": "Ten USD"
                    },                   
                ]
            each v,index in bakery
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Itemname}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }